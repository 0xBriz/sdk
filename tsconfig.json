{
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "baseUrl": ".",
    "paths": {
      "@sdk":         ["./src/index"],
      "@sdk/*":       ["./src/*"],
      "@abis":        ["./src/abis"],
      "@abis/*":      ["./src/abis/*"],
      "@bridge":      ["./src/bridge"],
      "@bridge/*":    ["./src/bridge/*"],
      "@common/*":    ["./src/common/*"],
      "@entities":    ["./src/entities"],
      "@contracts":   ["./src/contracts"],
      "@contracts/*": ["./src/contracts/*"],
      "@chainid":     ["./src/common/chainid"],
      "@networks":    ["./src/common/networks"],
      "@internal/*":  ["./src/internal/*"],
      "@swappools":   ["./src/swappools"],
      "@token":       ["./src/token"],
      "@tokens":      ["./src/tokens"],
      "@tokenswap":   ["./src/tokenswap"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop":   true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "types": [
      "node",
      "chai",
      "mocha",
      "expect"
    ],
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-transform-paths" } // Transform paths in output .js files
    ]
  },
  "ts-node": {
    "files": true,
    "pretty": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "examples"
  ]
}